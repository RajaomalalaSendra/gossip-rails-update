
<br/><br/><br/><br/>
<div class="row">
	<div class="col-sm-4">
		
	</div>
	<div class="col-sm-4"> 
	<div class="transparent">
	<div class="justify-content-center">
	<div class="alert alert-dismissible alert-success">
	<%= form_tag url_for(action: 'create'), method: "post" do %>
	</br>
	</br>
    <h1><span class="badge badge-primary">NEW USER</span></h1>

	<table>
		<tr>
			<td><%= label_tag 'First Name' %></td>
			<td><%= text_field_tag "first_name" %></td>	
		</tr>
		<tr>
			<td><%= label_tag 'Last Name' %></td>
			<td><%= text_field_tag "last_name" %></td>	
		</tr>
		<tr>
			<td><%= label_tag 'Description' %></td>
			<td><%= text_area_tag "description" %></td>	
		</tr>
		<tr>
			<td><%= label_tag 'Email' %></td>
			<td><%= text_field_tag "email" %></td>	
		</tr>
		<tr>
			<td><%= label_tag 'Age' %></td>
			<td><%= text_field_tag "age" %></td>	
		</tr>
		<tr>
			<td><%= label_tag 'Password' %></td>
			<td><%= text_field_tag "password" %></td>	
		</tr>
		<div class="form-group">
      		<label for="exampleInputPassword1">Password</label>
      		<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    	</div>
    	    <div class="form-group">
      	<label for="exampleInputEmail1">Email address</label>
      		<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
      		<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    	</div>
    	<div class="form-group">
      		<label for="exampleTextarea">Example textarea</label>
      		<textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
    	</div>
		<tr>
			<td><%= label_tag 'Password Confirmation' %></td>
			<td><%= text_field_tag "password_confirmation" %></td>	
		</tr>
		<tr>
			<td></td>
			<td><%= submit_tag("create", :class => "btn btn-primary") %></td>	
		</tr>
	</table>
    <% end %>
</div>
	
</div>	
</div>	
</div>
	<div class="col-sm-4">
		
	</div>
</div>
